{
  "version": "1.7.0",
  "description": "JustGage is a handy JavaScript plugin for generating and animating nice & clean gauges. Modern ES6+ implementation with native SVG rendering.",
  "type": "module",
  "main": "dist/justgage.cjs",
  "module": "dist/justgage.esm.js",
  "browser": "dist/justgage.umd.js",
  "types": "src/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/justgage.esm.js",
      "require": "./dist/justgage.cjs",
      "browser": "./dist/justgage.umd.js",
      "types": "./src/types/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist/",
    "src/",
    "!src/**/*.test.js"
  ],
  "scripts": {
    "build": "node esbuild.config.js",
    "build:old": "grunt build && cp justgage.js docs/ && cp raphael.min.js docs/ && git add dist/* docs/*",
    "dev": "node esbuild.config.js --watch",
    "server": "npx http-server -c-1 -p 8000",
    "build:watch": "node esbuild.config.js --watch",
    "test": "node --test tests/**/*.test.js",
    "test:watch": "node --test --watch tests/**/*.test.js",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint --fix src/ tests/",
    "changelog": "auto-changelog -p && git add CHANGELOG.md",
    "release": "read -p 'GITHUB_TOKEN: ' GITHUB_TOKEN && export GITHUB_TOKEN=$GITHUB_TOKEN && release-it"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/toorshia/justgage.git"
  },
  "auto-changelog": {
    "commitLimit": false
  },
  "release-it": {
    "github": {
      "release": true,
      "assets": [
        "dist/*"
      ]
    },
    "git": {
      "tagName": "v${version}"
    },
    "hooks": {
      "before:init": [
        "npm run lint"
      ],
      "after:bump": [
        "npm run build",
        "npm run changelog"
      ]
    },
    "npm": {
      "publish": true
    }
  },
  "keywords": [
    "gauge",
    "meter",
    "clean",
    "simple",
    "minimal",
    "svg",
    "vector",
    "performance",
    "indicator",
    "measure",
    "dashboard",
    "javascript",
    "plugin",
    "es6",
    "modern",
    "zero-dependencies"
  ],
  "author": "Bojan Djuricic <pindjur@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/toorshia/justgage/issues"
  },
  "homepage": "https://github.com/toorshia/justgage",
  "devDependencies": {
    "auto-changelog": "^2.4.0",
    "esbuild": "^0.19.12",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "grunt": "^1.5.3",
    "grunt-contrib-clean": "^2.0.1",
    "grunt-contrib-concat": "^2.1.0",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-uglify-es": "^3.3.0",
    "grunt-contrib-watch": "^1.1.0",
    "jsdom": "^27.0.0",
    "matchdep": "^2.0.0",
    "prettier": "^3.6.2",
    "release-it": "^15.5.0"
  }
}
